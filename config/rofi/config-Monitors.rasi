/* Monitor Profiles Menu */

@import "~/.config/rofi/config.rasi" 

/* ---- Mainbox ---- */
mainbox {
  children:
    [ "inputbar", "message", "listview"];
}

/* ---- Window ---- */
window {
  width: inherit;
  height: inherit;
}

/* ---- Entry ---- */ 
entry {
  width: 43%;
  placeholder: " ðŸ’» Search / Choose which Monitor Profiles to load";
  horizontal-align: 0.5;
}

/* ---- Listview ---- */
listview {
  columns: 2;
  lines: 3;
  fixed-height: false;
  margin: 10px;
  scrollbar: true;
  cycle: true;
}

/* ---- Elements ---- */
element-icon {
  size: 0%;
}
element-text {
  horizontal-align: 0.5;
  vertical-align: 0.0;
  margin: 5px 30px 5px 30px;
}
